@model Mvc3QuizQuestions.Models.Question
@{
    ViewBag.Title = "Delete";
}
<div class="page-header">
    <h2>
        Delete</h2>
</div>
<h3>
    Are you sure you want to delete this?</h3>
@using (Html.BeginForm())
{
    <div>
        <fieldset>
            <legend>Question</legend>
            <br />
            <div class="row">
                <div class="span2">@Html.LabelFor(model => model.Title)</div>
                <div class="span10">@Html.DisplayFor(model => model.Title)</div>
            </div>
            <div class="row">
                <div class="span2">@Html.LabelFor(model => model.HelpText)</div>
                <div class="span10">@Html.DisplayFor(model => model.HelpText)</div>
            </div>
            <div class="row">
                <div class="span2">@Html.LabelFor(model => model.Order)</div>
                <div class="span10">@Html.DisplayFor(model => model.Order)</div>
            </div>
            <div class="form-actions">
                <input type="submit" class="btn btn-danger" value="Delete" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
            </div>
        </fieldset>
        <br />
    </div>
}
